# Server
HOST=127.0.0.1
PORT=3000
NODE_ENV=development
LOG_LEVEL=info

# Database (also used by docker-compose mysql service)
MYSQL_HOST=127.0.0.1
MYSQL_PORT=3306
MYSQL_DATABASE=beezie
MYSQL_ROOT_PASSWORD=change-me
MYSQL_USER=beezie
MYSQL_PASSWORD=change-me
DATABASE_URL=mysql://beezie:change-me@127.0.0.1:3306/beezie

# JWT configuration
JWT_PRIVATE_KEY=replace-with-rsa-private-key
JWT_PUBLIC_KEY=replace-with-rsa-public-key
JWT_EXPIRES_IN=15m
JWT_REFRESH_EXPIRES_IN=7d
JWT_ISSUER=beezie-api
JWT_AUDIENCE=beezie-clients
JWT_KEY_ID=current-key
# JSON array of { "kid": "legacy-key", "publicKey": "-----BEGIN PUBLIC KEY-----..." }
JWT_ADDITIONAL_PUBLIC_KEYS=[]

# Encryption
ENCRYPTION_KEY=replace-with-32-characters-minimum-secret

# Flow / TypeChain configuration
# Flow EVM JSON-RPC endpoint (e.g. https://evm-testnet.flowscan.io/v1/<project-id>)
FLOW_ACCESS_API=https://testnet.evm.nodes.onflow.org
FLOW_USDC_CONTRACT_ADDRESS=0x5e65b6B04fbA51D95409712978Cb91E99d93aE73
FLOW_NETWORK=testnet

# Faucet configuration (used by scripts/demo.sh & scripts/fund-wallet.ts)
# Provide the private key of a funded Flow EVM wallet (or leave blank to use faucet-account.txt)
FLOW_FAUCET_PRIVATE_KEY=
# Default native FLOW amount (in FLOW) to top up freshly created wallets (set 0 to skip)
FUND_FLOW_AMOUNT=0.1
# Default USDC amount (with 6 decimals) to top up freshly created wallets (set 0 to skip)
FUND_USDC_AMOUNT=5

# HTTP configuration
# Comma-separated list of allowed origins for CORS (use * to allow all)
CORS_ALLOWED_ORIGINS=*
