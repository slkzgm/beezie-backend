# Server
HOST=127.0.0.1
PORT=3000
NODE_ENV=development
LOG_LEVEL=info

# Database (also used by docker-compose mysql service)
MYSQL_HOST=127.0.0.1
MYSQL_PORT=3306
MYSQL_DATABASE=beezie
MYSQL_ROOT_PASSWORD=change-me
MYSQL_USER=beezie
MYSQL_PASSWORD=change-me
DATABASE_URL=mysql://beezie:change-me@127.0.0.1:3306/beezie

# JWT configuration
JWT_PRIVATE_KEY=replace-with-rsa-private-key
JWT_PUBLIC_KEY=replace-with-rsa-public-key
JWT_EXPIRES_IN=15m
JWT_REFRESH_EXPIRES_IN=7d

# Encryption
ENCRYPTION_KEY=replace-with-32-characters-minimum-secret

# Flow / TypeChain configuration
FLOW_ACCESS_API=https://rest-testnet.onflow.org
FLOW_USDC_FACTORY_ADDRESS=0x0000000000000000000000000000000000000000
FLOW_NETWORK=testnet
