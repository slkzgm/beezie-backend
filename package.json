{
  "name": "backend",
  "type": "module",
  "private": true,
  "main": "src/index.ts",
  "scripts": {
    "dev": "bun run --watch src/index.ts",
    "build": "bun build ./src/index.ts --outfile ./dist/index.js --target bun",
    "start": "bun run dist/index.js",
    "typecheck": "tsc --noEmit",
    "lint": "eslint --no-error-on-unmatched-pattern \"src/**/*.ts\" \"scripts/**/*.ts\" \"tests/**/*.ts\"",
    "lint:fix": "bun run lint -- --fix",
    "format": "prettier --write \"{src,scripts,tests}/**/*.ts\"",
    "format:check": "prettier --check \"{src,scripts,tests}/**/*.ts\"",
    "drizzle:generate": "DRIZZLE_CONFIG=./drizzle.config.ts drizzle-kit generate",
    "drizzle:migrate": "DRIZZLE_CONFIG=./drizzle.config.ts drizzle-kit migrate",
    "typechain": "typechain --target ethers-v6 --out-dir ./typechain \"artifacts/**/*.json\"",
    "test": "bun test"
  },
  "devDependencies": {
    "@eslint/js": "^9.38.0",
    "@typechain/ethers-v6": "^0.5.1",
    "@types/node": "^24.9.1",
    "@typescript-eslint/eslint-plugin": "^8.46.2",
    "@typescript-eslint/parser": "^8.46.2",
    "bun-types": "^1.3.1",
    "drizzle-kit": "^0.31.5",
    "eslint": "^9.38.0",
    "eslint-config-prettier": "^10.1.8",
    "lint-staged": "^16.2.6",
    "prettier": "^3.6.2",
    "typechain": "^8.3.2",
    "typescript": "^5.9.3",
    "typescript-eslint": "^8.46.2"
  },
  "dependencies": {
    "@hono/zod-validator": "^0.7.4",
    "bcryptjs": "^3.0.2",
    "dotenv": "^17.2.3",
    "drizzle-orm": "^0.44.7",
    "ethers": "^6.15.0",
    "hono": "^4.10.2",
    "jose": "^6.1.0",
    "mysql2": "^3.15.3",
    "zod": "^4.1.12"
  },
  "lint-staged": {
    "{src,scripts,tests}/**/*.ts": [
      "eslint --fix",
      "prettier --write"
    ]
  }
}
